# Configuración del Backend For Frontend (BFF)
# Archivo: .env.bff (ejemplo)

# Configuración del servidor BFF
BFF_HOST=0.0.0.0
BFF_PORT=5001
BFF_DEBUG=true
BFF_SECRET_KEY=bff-secret-key-change-in-production

# URLs de servicios backend (Alpes Partners microservices)
ALPESPARTNERS_SERVICE_URL=http://localhost:5000

# Configuración HTTP
BFF_HTTP_TIMEOUT=30
BFF_MAX_RETRIES=3

# Cache configuración (en memoria por defecto)
BFF_CACHE_TIMEOUT=300

# Logging
BFF_LOG_LEVEL=INFO
BFF_LOG_FILE=logs/bff.log

# Paginación por defecto
BFF_DEFAULT_PAGE_SIZE=20
BFF_MAX_PAGE_SIZE=100

# CORS configuración
BFF_CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Monitoreo y métricas
BFF_METRICS_ENABLED=true
BFF_HEALTH_CHECK_SERVICES=true